<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css?family=Lobster+Two" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <title>Donut Tycoon</title>
</head>
<body>
  <header>
    <img src="/radialBurst.png" alt="Radial Burst Header Background" id='radialBurst'>
    <h1 id = 'title'>Donut Tycoon</h1>
  </header>

  <section>
      <h2 id = 'pageTitle'>All Shop Locations</h2>
      <div id='buttonBox'>
        <a href="/"><button id='homeButton'>Home</button></a>
        <a href="/"><button id='loginButton'>Login</button></a>
        <a href="/"><button id='signupButton'>Sign Up</button></a>
      </div>
      <a href="/shops/new"><button id = 'newButton'>Add a Shop</button></a>
      <ul>
        <% shops.forEach( (shop) => { %>
          <li>
            <div id='buttonBox'>
              <a href='/shops/<%=shop.id%>/edit'><button id='editEntry'>Edit</button></a>
              <form id='buttonOnlyForm' method="POST" action='/shops/<%=shop.id%>?_method=DELETE'>
                <input id='deleteEntry' type="submit" value='x'>
              </form>
            </div>
            <div>
              <h4> <a href='/shops/<%=shop.id%>'> <%= shop.name %> </a> </h4>
              <p> City: <%= shop.city %> </p>
            </div>
          </li>
          <hr>
        <% }) %>
      </ul>
  </section>
  <footer>
    A full stack web app by <a href="http://www.rachelcavin.com">Rachel Cavin</a>.
  </footer>
</body>
</html>
